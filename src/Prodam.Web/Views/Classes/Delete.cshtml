@model Prodam.Core.Entities.Class

@{
    ViewData["Title"] = "Remover Classe";
}

<h2>@ViewData["Title"]</h2>

<h3>Você realmente quer remover classe número: @Model.Number?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolSubject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolSubject)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
